<Window x:Class="Sphere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sphere"
        SizeToContent="WidthAndHeight"
        Background="Black"
        Title="MainWindow">
    
    <Grid Width="854" Height="480">
        <local:CloudLayer MinimumSpeed="0.5" AccelerationRate="2.0" Acceleration="{Binding Value, ElementName=AccelerationSlider}" />        
        <StackPanel Orientation="Horizontal" Background="#AAFFFFFF" Height="50" VerticalAlignment="Bottom">
            <TextBlock Text="Acceleration" />
            <Slider x:Name="AccelerationSlider" Minimum="0.0" Maximum="1.0" Width="300"/>
            <TextBlock Text="{Binding Value, ElementName=AccelerationSlider}" />
        </StackPanel>
    </Grid>
    
</Window>
